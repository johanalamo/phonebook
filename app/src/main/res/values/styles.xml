<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
<!--        <item name="colorPrimary">@android:color/holo_red_light</item>     -->
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="stlToolbarActivity">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:padding">@dimen/threeSep</item>
    </style>

    <style name="stlTitleActivity">
        <item name="android:layout_marginLeft">@dimen/twoSep</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/sizeTxtTitleActivity</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="stlSubtitle">
        <item name="android:layout_marginLeft">@dimen/twoSep</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/sizeTxtSubtitle</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">@color/primaryLightColor</item>
    </style>


    <style name="stlImgPersonNormal">
        <item name="android:layout_height">@dimen/sizeImgPersonNormal</item>
        <item name="android:layout_width">@dimen/sizeImgPersonNormal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="stlImgStarPersonList">
        <item name="android:layout_height">@dimen/sizeIconSmall</item>
        <item name="android:layout_width">@dimen/sizeIconSmall</item>
        <item name="android:layout_marginLeft">@dimen/twoSep</item>
        <item name="android:layout_marginRight">@dimen/twoSep</item>
    </style>

    <style name="stlImgIconSmall">
        <item name="android:layout_height">@dimen/sizeIconSmall</item>
        <item name="android:layout_width">@dimen/sizeIconSmall</item>
        <item name="android:layout_marginLeft">@dimen/twoSep</item>
        <item name="android:layout_marginRight">@dimen/twoSep</item>
    </style>


    <style name="stlImgPersonLarge">
        <item name="android:layout_height">@dimen/sizeImgPersonLarge</item>
        <item name="android:layout_width">@dimen/sizeImgPersonLarge</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="stlPhoneBookNameNormal">
        <item name="android:textSize">@dimen/sizeTxtNamePersonList</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="stlPhoneBookCompanyNameNormal">
        <item name="android:textSize">@dimen/sizeTxtNameCompanyNameList</item>
<!--        <item name="android:textColor">@android:color/holo_red_dark</item>    -->
        <item name="android:textColor">@color/primaryColor</item>
    </style>


    <style name="stlPhoneBookNameLarge">
        <item name="android:textSize">@dimen/sizeTxtNamePersonDetail</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="stlPhoneBookCompanyNameLarge">
        <item name="android:textSize">@dimen/sizeTxtNameCompanyNameDetail</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>


    <style name="stlDetailInfoTitle">
        <item name="android:textSize">@dimen/sizeTextDetailInfo</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="stlDetailInfoExtra">
        <item name="android:textSize">@dimen/sizeTextDetailInfo</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="stlDetailInfoValue">
        <item name="android:textSize">@dimen/sizeTextDetailInfo</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
