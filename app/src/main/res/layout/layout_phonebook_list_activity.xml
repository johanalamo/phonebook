<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>
    <LinearLayout
            android:id="@+id/lytTitle"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/stlToolbarActivity"
    >
        <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strContacts"
                style="@style/stlTitleActivity"
        />
    </LinearLayout>
 <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
     <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
    <TextView
            android:id="@+id/txtFavoriteContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strFavoriteContacts"
            style="@style/stlSubtitle"
    />
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rviewPhoneBookListFavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lytTitle"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:id="@+id/txtOtherContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strOtherContacts"
            style="@style/stlSubtitle"
    />
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rviewPhoneBookListOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lytTitle"
            app:layout_constraintBottom_toBottomOf="parent"
    />
     </LinearLayout>
 </ScrollView>
</LinearLayout>
