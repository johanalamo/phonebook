<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/linearLayoutOneProduct"
                android:orientation="vertical"
                style="@style/stlProductListItem"
>
    <ImageView
        android:id="@+id/imgProduct"
        style="@style/stlImgProductList"
    />
    <TextView
            android:text="TextView"
            style="@style/stlProductListDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescription"
    />
    <TextView
            android:text="TextView"
            style="@style/stlProductListPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPrice"
    />

    <LinearLayout
            android:id="@+id/lytDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <TextView
                android:text="TextView"
                style="@style/stlProductListPriceList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtListPrice"
        />
        <Space
                android:layout_width="@dimen/threeSep"
               android:layout_height="0dp"/>
        <TextView
                android:text="TextView"
                style="@style/stlProductListDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDiscount"
        />
    </LinearLayout>
</LinearLayout>
